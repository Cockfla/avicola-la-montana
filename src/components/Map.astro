---
const lat = -34.85988569464546;
const lng = -71.06293727116383;
const embedUrl = `https://www.google.com/maps/embed/v1/place?key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8&q=${lat},${lng}&zoom=15`;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden">
	<div class="aspect-w-16 aspect-h-9">
		<iframe 
			width="100%" 
			height="400" 
			style="border:0" 
			loading="lazy" 
			allowfullscreen
			src={embedUrl}
			title="Ubicación de Avícola La Montaña"
		>
		</iframe>
	</div>
	<div class="p-6 bg-gray-50">
		<div class="flex items-center justify-between">
			<div>
				<h3 class="text-lg font-bold text-[#bf1e28] mb-2">Avícola La Montaña</h3>
				<p class="text-gray-600 text-sm">Ubicación estratégica para su conveniencia</p>
			</div>
			<a 
				href={`https://www.google.com/maps?q=${lat},${lng}`}
				target="_blank"
				rel="noopener noreferrer"
				class="bg-[#bf1e28] text-white px-4 py-2 rounded-lg hover:bg-[#a54822] transition-colors text-sm font-semibold"
			>
				Abrir en Google Maps
			</a>
		</div>
	</div>
</div>
