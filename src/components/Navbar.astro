---
const currentPath = Astro.url.pathname;
---

<nav class="bg-white shadow-lg sticky top-0 z-50">
	<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex justify-between items-center h-16">
			<!-- Logo -->
			<div class="flex-shrink-0">
				<a href="/" class="flex items-center">
					<img src="/logo-avicola.png" alt="Avícola La Montaña" class="h-16 w-auto">
					<span class="ml-3 text-xl font-bold text-[#bf1e28] hidden sm:block">Avícola La Montaña</span>
				</a>
			</div>

			<!-- Desktop Navigation -->
			<div class="hidden md:block">
				<div class="ml-10 flex items-baseline space-x-8">
					<a href="/" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${currentPath === '/' ? 'text-[#bf1e28] bg-[#fff2d7]' : 'text-gray-700 hover:text-[#bf1e28] hover:bg-[#fff2d7]'}`}>
						Inicio
					</a>
					<a href="/productos" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${currentPath === '/productos' ? 'text-[#bf1e28] bg-[#fff2d7]' : 'text-gray-700 hover:text-[#bf1e28] hover:bg-[#fff2d7]'}`}>
						Productos
					</a>
					<a href="/nosotros" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${currentPath === '/nosotros' ? 'text-[#bf1e28] bg-[#fff2d7]' : 'text-gray-700 hover:text-[#bf1e28] hover:bg-[#fff2d7]'}`}>
						Nosotros
					</a>
					<a href="/contacto" class={`px-3 py-2 rounded-md text-sm font-medium transition-colors ${currentPath === '/contacto' ? 'text-[#bf1e28] bg-[#fff2d7]' : 'text-gray-700 hover:text-[#bf1e28] hover:bg-[#fff2d7]'}`}>
						Contacto
					</a>
				</div>
			</div>

			<!-- Mobile menu button -->
			<div class="md:hidden">
				<button id="mobile-menu-button" class="text-gray-700 hover:text-[#bf1e28] focus:outline-none focus:text-[#bf1e28]">
					<svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
					</svg>
				</button>
			</div>
		</div>
	</div>

	<!-- Mobile Navigation -->
	<div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
		<div class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
			<a href="/" class={`block px-3 py-2 rounded-md text-base font-medium ${currentPath === '/' ? 'text-[#bf1e28] bg-[#fff2d7]' : 'text-gray-700 hover:text-[#bf1e28] hover:bg-[#fff2d7]'}`}>
				Inicio
			</a>
			<a href="/productos" class={`block px-3 py-2 rounded-md text-base font-medium ${currentPath === '/productos' ? 'text-[#bf1e28] bg-[#fff2d7]' : 'text-gray-700 hover:text-[#bf1e28] hover:bg-[#fff2d7]'}`}>
				Productos
			</a>
			<a href="/nosotros" class={`block px-3 py-2 rounded-md text-base font-medium ${currentPath === '/nosotros' ? 'text-[#bf1e28] bg-[#fff2d7]' : 'text-gray-700 hover:text-[#bf1e28] hover:bg-[#fff2d7]'}`}>
				Nosotros
			</a>
			<a href="/contacto" class={`block px-3 py-2 rounded-md text-base font-medium ${currentPath === '/contacto' ? 'text-[#bf1e28] bg-[#fff2d7]' : 'text-gray-700 hover:text-[#bf1e28] hover:bg-[#fff2d7]'}`}>
				Contacto
			</a>
		</div>
	</div>
</nav>

<script>
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');

	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});
</script>
